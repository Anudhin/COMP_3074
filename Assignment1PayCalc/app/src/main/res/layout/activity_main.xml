<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Calculator"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="12dp" />

        <!-- Inputs -->
        <EditText
            android:id="@+id/etHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hours Worked"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hourly Rate ($)"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tax Rate (e.g., 13 or 13%)"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginBottom="16dp" />


        <!-- Actions -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate" />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_marginTop="10dp" />

        <!-- Outputs -->
        <TextView
            android:id="@+id/tvResultsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay: $0.00" />

        <TextView
            android:id="@+id/tvOvertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overtime Pay: $0.00" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pay: $0.00" />

        <TextView
            android:id="@+id/tvTax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax: $0.00" />

    </LinearLayout>
</ScrollView>
